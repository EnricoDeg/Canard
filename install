#!/bin/bash
########
# Help #
########
Help()
{
   # Display Help
   echo "Canard Installation options:"
   echo "h     Print this Help"
   echo "m     Specify the machine"
   echo "l     Get a listed of registered machines"
   echo "f     enable viscosity [default OFF]"
   echo "v     Verbose mode [default OFF]"
   echo "d     Debug mode build type [default OFF]"
   echo "c     Specify compiler"
   echo "p     Specify MPI implementation"
   echo
}

List()
{
   echo "Registered and tested machines:"
   echo "$(ls -1 machine)"
}


########
# Main #
########
VERBOSE=OFF
BTYPE=Release
VISCOUS=OFF
MACHINE=
COMPILER=
while getopts ":hm:lvdfc:p:" option; do
   case $option in
      h) # display Help
         Help
         exit;;
      m) # define machine
         MACHINE=${OPTARG}
	 echo "Using ${OPTARG} machine"
	 ;;
      l)  # List machines
	 List
	 exit;;
      v) # Verbose mode
	 VERBOSE=ON
	 ;;
      d) # Debug mode
	 BTYPE=Debug
	 ;;
      f) # Viscosity
         VISCOUS=ON
         ;;
      c) # Compiler
         COMPILER=${OPTARG}
         echo "Using ${OPTARG} compiler"
	 ;;
      p) # MPI
         MPI_TYPE=${OPTARG}
         echo "Using ${OPTARG} MPI implementation"
	 ;;
     \?) # Invalid option
         echo "Error: Invalid option"
         exit;;
   esac
done

source machine/${MACHINE} ${COMPILER} ${MPI_TYPE}

mkdir build
cd build

echo "cmake -DCMAKE_INSTALL_PREFIX=${CANARD_DIR} -DCMAKE_BUILD_TYPE=${BTYPE} -DENABLE_VISCOSITY=${VISCOUS} -DCMAKE_VERBOSE_MAKEFILE:BOOL=${VERBOSE} .."

cmake -DCMAKE_INSTALL_PREFIX=${CANARD_DIR}      \
      -DCMAKE_BUILD_TYPE=${BTYPE}              \
      -DENABLE_VISCOSITY=${VISCOUS}                \
      -DCMAKE_VERBOSE_MAKEFILE:BOOL=${VERBOSE} \
      ..

make install
cd ..
rm -r build

